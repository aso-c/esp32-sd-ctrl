		    cfg.flags = (cfg.flags | actflg) & (~mask | actflg); };
    
		///   Set or clear SD::MMC::Slot internal pullup flag
	    void constexpr pullup(MMC::pullup state)  {
		//(cfg.flags | (state & slot::pullup)) & ~(state & slot::pullup);};
	//	cfg.flags = cfg.flags & ~(state & slot::pullup) | (state & slot::pullup); };
		/*cfg.flags =*/ setflag(/*cfg.flags,*/ state, slot::pullup); };
//		pullup(state == MMC::pullup::yes);};
	    //!
	    // @brief   Set or clear SD::MMC::Slot internal pullup flag
	    // @param   state
	    //	      - true : enable the internal pullup
	    //	      - false: disable the internal pullup
	    // @return  none
	    void constexpr pullup(bool state)  {
//		cfg.flags = cfg.flags & ~(state & slot::pullup) | (state & slot::pullup);
		pullup(state? pullup::yes: pullup::no); };
	    //!
	    // @brief   Return the value of SD::MMC::Slot internal pullup bit
	    // @param   none
	    // @return
	    //		- true : enable the internal pullup
	    //		- false: disable the internal pullup
	    bool constexpr pullup() {return (cfg.flags & static_cast<uint32_t>(MMC::pullup::yes)/*SDMMC_SLOT_FLAG_INTERNAL_PULLUP*/);};

	    /// Select active level of the Write Protect GPIO
	    void constexpr wp_active(wp::active state)  {
//		wp_active(state == wp::active::high); }; /* SD::MMC::Slot::pullup() */
		/*cfg.flags =*/ setflag(/*cfg.flags,*/ state, slot::wp_high); };
	    //!
	    // @brief   Select active level of the Write Protect GPIO
	    // @param   state
	    //	      - true : set active level of the WP GPIO to High
	    //	      - false: set active level of the WP GPIO to Low
	    // @return  none
	    void constexpr wp_active(bool state)  {
//		cfg.flags = (state)? cfg.flags | SDMMC_SLOT_FLAG_WP_ACTIVE_HIGH: cfg.flags & ~SDMMC_SLOT_FLAG_WP_ACTIVE_HIGH; }; /* SD::MMC::Slot::pullup() */
		wp_active(state? wp::active::high: wp::active::low); };
	    //!
	    // @brief   Return the active level of the Write Protect GPIO
	    // @param   none
	    // @return
	    //	      - true : active level of the WP GPIO is High
	    //	      - false: active level of the WP GPIO is Low
	    bool constexpr wp_active() { return (cfg.flags & static_cast<uint32_t>(wp::active::high)/*SDMMC_SLOT_FLAG_WP_ACTIVE_HIGH*/);};

	    /// Enable/disable the UHS-1 mode for sd-card in desired slot
	    void constexpr UHS(uhs state) {
//		UHS(state == uhs::mode1); }; /* SD::MMC::Slot::pullup() */
		/*cfg.flags =*/ setflag(/*cfg.flags,*/ state, slot::uhs1); };
	    //!
	    // @brief   Enable/disable the UHS-1 mode for sd-card in desired slot
	    // @param   state
	    //	      - true : enable the UHS-1 mode
	    //	      - false: disable the UHS-1 mode
	    // @return  none
	    void constexpr UHS(bool state) {
//		cfg.flags = (state)? cfg.flags | SDMMC_SLOT_FLAG_UHS1: cfg.flags & ~SDMMC_SLOT_FLAG_UHS1; }; /* SD::MMC::Slot::pullup() */
		UHS(state? uhs::mode1: uhs::no); };
	    //!
	    // @brief   Read the UHS-1 mode for sd-card in desired slot
	    // @param   none
	    // @return
	    //	      - true : the UHS-1 mode is enabled
	    //	      - false: the UHS-1 mode is disabled
	    bool constexpr UHS() {return (cfg.flags & static_cast<uint32_t>(uhs::mode1)/*SDMMC_SLOT_FLAG_UHS1*/);};


	    /// Set the 'flag' field value of the SD::MMC::Slot
	    void flags(uint32_t val)  {
		cfg.flags = val;
	    }; /* SD::MMC::Slot::flags() */
#endif


	    //!
	    // @brief   set the width the bus of the desired host
	    // @param   width: desired host bus width
	    // @return  none
	    void constexpr width(bus::width width)  {
		cfg.width = static_cast<uint8_t>(width);
	    }; /* SD::MMC::Slot::pullup() */
	    //!
	    // @brief   return width of the bus for the desired host
	    // @param   none
	    // @return  desired host bus width
	    uint8_t constexpr width() {return cfg.width;};


	    Slot& operator =(const Slot&);
	    Slot& operator =(const sdmmc_slot_config_t&);
	    Slot& operator =(sdmmc_slot_config_t&&) noexcept;

	    operator sdmmc_slot_config_t&() {return cfg;};
	    operator sdmmc_slot_config_t*() {return &cfg;};

	}; /* struct SD::MMC::Slot */



	//=================================================
	// SD::MMC::Host
	struct Host: public SD::Host
	{
	    friend class SD::Card;


	    // Default constructor
	    Host() {};

	    Host(slot::no no, uint32_t setflags, int maxfreq = SDMMC_FREQ_DEFAULT);
	    //Host(slot::no no, uint32_t setflags, int maxfreq);

	    // "copy" constructor
	    constexpr Host(const sdmmc_host_t& xhost ): instance(xhost) {};
	    // copy constructor
	    constexpr Host(const Host& xhost): Host(xhost.instance) {};

#if 0
	    Host(bus::width = bus::width::def, pullup = pullup::no);
	    // Constructor with default slot configuration by number of the slot
	    Host(SD::MMC::Slot, bus::width = bus::width::def, pullup = pullup::no);
	    // Custom slot configuration in temporary obj for desired slot number
	    Host(SD::MMC::Slot, const Slot&, bus::width = bus::width::def, pullup = pullup::no);	// in lvalue object
	    // Copy constructors
	    Host(const Host&, bus::width = bus::width::def, pullup = pullup::no);		// for lvalue object (defined variable)
	    // for lvalue object (defined variable)
	    Host(const sdmmc_host_t&, bus::width = bus::width::def, pullup = pullup::no);
	    // for lvalue object (defined variable)
	    Host(const sdmmc_host_t& ehost, const sdmmc_slot_config_t& eslot, bus::width busw = bus::width::def, pullup pullst = pullup::no):
		Host(ehost, busw, pullst) {
